generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DATABASE_URL")
}

model User {
  id           Int            @id @default(autoincrement())
  username     String         @unique
  password     String
  email        String         @unique
  name         String?
  FacebookInfo FacebookInfo[]
}

model FacebookInfo {
  id                  String                  @id @default(uuid())
  userId              Int
  User                User                 @relation(fields: [userId], references: [id])
  fbId                BigInt               @unique
  name                String?
  first_name          String?
  last_name           String?
  email               String?
  profile_picture_url String?
  facebookInfoSecrets FacebookInfoSecret[]

  @@index([userId])
}

model FacebookInfoSecret {
  id             Int          @id @default(autoincrement())
  facebookInfoId String
  FacebookInfo   FacebookInfo @relation(fields: [facebookInfoId], references: [id])
  fbAccessToken  String
  fbRefreshToken String?

  @@index([facebookInfoId])
}